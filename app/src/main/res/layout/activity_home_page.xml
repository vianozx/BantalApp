<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Teks Selamat Datang -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-medium"
        android:text="Selamat Datang Kembali,"
        android:textColor="#5A3921"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Nama Pengguna -->
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-medium"
        android:text="Emanuel"
        android:textColor="#C47C39"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome" />

    <!-- Tombol 1: Cek Kondisi Mental -->
    <LinearLayout
        android:id="@+id/btnCheckMental"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvUserName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:layout_width="346dp"
            android:layout_height="120dp"
            android:backgroundTint="#BCBCBC"
            android:fontFamily="sans-serif"
            android:gravity="left"
            android:text="Cek Kondisi Mental\nKamu Disini"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Tombol 2: Artikel Kesehatan -->
    <LinearLayout
        android:id="@+id/btnMentalArticles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnCheckMental"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:layout_width="348dp"
            android:layout_height="121dp"
            android:backgroundTint="#BCBCBC"
            android:fontFamily="sans-serif"
            android:gravity="left"
            android:text="Artikel Mengenai\nKesehatan Mental"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Tombol 3: Riwayat Kesehatan -->
    <LinearLayout
        android:id="@+id/btnMentalHistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnMentalArticles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:layout_width="346dp"
            android:layout_height="126dp"
            android:backgroundTint="#BCBCBC"
            android:fontFamily="sans-serif"
            android:gravity="left"
            android:text="Riwayat Kesehatan\nMental"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Navigasi Bawah -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav"/>
</androidx.constraintlayout.widget.ConstraintLayout>
